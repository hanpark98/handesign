        <div class="fproj" id="fproj"
  onwheel="
    if (window.innerWidth <= 1024 || !this.matches(':hover')) return;

    const el = this;

    /* ── 1) 휠 입력 정규화: deltaMode(라인/픽셀) 보정 ── */
    const unit = (event.deltaMode === 1) ? 16 : (event.deltaMode === 2) ? window.innerHeight : 1;
    const dX = event.deltaX * unit;
    const dY = event.deltaY * unit;

    /* ── 2) 전환 민감도: ay >= ax * THETA 로 느슨화 ── */
    const ax = Math.abs(dX), ay = Math.abs(dY);
    const THETA = 0.1;                     /* ↓ 값이 작을수록 전환 더 민감 */
    if (ay < ax * THETA) return;           /* 가로 의도가 크면 개입 X */

    /* ── 3) 끝 판정 오차 축소 + 방향/여유 판단 ── */
    const tol = 1;                          /* (기존 8→6) 더 민감하게 */
    const dir = dY;                         /* +오른쪽 / -왼쪽 */
    const max = el.scrollWidth - el.clientWidth;
    const left = el.scrollLeft;
    const canRight = dir > 0 && left < (max - tol);
    const canLeft  = dir < 0 && left > tol;

    /* 양끝이면 통과 → 페이지 세로 스크롤로 */
    if (!(canLeft || canRight)) return;

    /* ── 4) 가로 스크롤 흡수 + 관성(모멘텀) ── */
    event.preventDefault();

    /* 아주 작은 입력도 반응(미세 가속 보정) */
    const gain = 0.40;                      /* ↑ 가속도: 0.35→0.50로 상향 */
    const nudge = ay < 2 ? 2 * Math.sign(dir || 1) : 0;  /* 미세 입력 보강 */
    const impulse = dir * gain + nudge;

    if (!el._mom) {
      el._mom = { v: 0, raf: 0 };
      const step = () => {
        if (!el._mom) return;
        const max = el.scrollWidth - el.clientWidth;
        let next = el.scrollLeft + el._mom.v;

        if (next <= 0) { next = 0; if (el._mom.v < 0) el._mom.v = 0; }
        if (next >= max) { next = max; if (el._mom.v > 0) el._mom.v = 0; }

        el.scrollLeft = next;

        /* 마찰(감쇠) – 살짝 완화해서 더 민감하게 유지 */
        el._mom.v *= 0.8;                  /* (기존 0.92→0.93) */

        if (Math.abs(el._mom.v) < 0.18) { cancelAnimationFrame(el._mom.raf); el._mom = null; return; }
        el._mom.raf = requestAnimationFrame(step);
      };
      el._mom.raf = requestAnimationFrame(step);
    }
    el._mom.v += impulse;

    /* ── 5) 중앙 정렬: 실제 흡수됐을 때만 1회(쿨다운) ── */
    const now = Date.now();
    if (!el._centerUntil || now > el._centerUntil) {
      const r = el.getBoundingClientRect();
      const targetY = window.scrollY + r.top + (r.height/2) - (window.innerHeight/2);
      window.scrollTo({ top: Math.max(0, targetY), behavior: 'smooth' });
      el._centerUntil = now + 700;
    }
  "
