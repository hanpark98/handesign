---
export interface Props {
  href: string; title: string; year?: string; thumb?: string; tags?: string[];
}
const { href, title, year, thumb = '/og-default.jpg', tags = [] } = Astro.props as Props;
---
<a href={href} class="group block">
  <figure class="overflow-hidden rounded-2xl border border-white/10">
    <img src={thumb} alt={title} loading="lazy" class="w-full h-auto aspect-[4/3] object-cover transition-transform duration-500 group-hover:scale-[1.02]" />
  </figure>
  <div class="mt-3 flex items-center justify-between">
    <h3 class="text-base font-medium group-hover:opacity-90">{title}</h3>
    {year && <span class="text-xs text-mute">{year}</span>}
  </div>
  {tags.length > 0 && (
    <ul class="mt-1 flex flex-wrap gap-2 text-xs text-mute">
      {tags.map(t => <li class="px-2 py-0.5 rounded-full bg-white/5 border border-white/10">{t}</li>)}
    </ul>
  )}
</a>
