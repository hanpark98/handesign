---
const { title = 'Han Park â€” Portfolio', description = 'Designer & creative technologist', ogImage = '/og-default.jpg' } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <link rel="icon" href="/favicon.svg"/>
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+KR:wght@300;400;500;700;900&display=swap" rel="stylesheet">
    <style is:global>@import '/src/styles/global.css';</style>
    <title>{title}</title>
  </head>
  <body>
    <header class="sticky top-0 z-50 backdrop-blur supports-[backdrop-filter]:bg-black/40 py-3">
      <div class="container flex items-center justify-between">
        <a href="/" class="font-extrabold tracking-tight">Han Park</a>
        <nav class="text-sm">
          <a class="link-underline mr-4" href="/projects/">Projects</a>
          <a class="link-underline mr-4" href="/craft/">Craft</a>
          <a class="link-underline" href="#contact">Contact</a>
        </nav>
      </div>
    </header>
    <main class="container"> <slot /> </main>
    <footer id="contact" class="container py-20">
      <hr class="border-white/10 mb-8" />
      <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
        <p class="p">Available for select projects. Seoul / Remote.</p>
        <CopyEmail client:load email="hanparkdesign@gmail.com" />
      </div>
    </footer>
  </body>
</html>
